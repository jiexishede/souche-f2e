            setInterval(function(){
                for(var i=0;i<20;i++){
                    data[i]=Math.random()*5
                }
                d3.selectAll(".item").data(data).transition().style("width",function(d){return d*100+"px";})
                     .text(function(d){return Math.floor(d)})
                    
                },700)