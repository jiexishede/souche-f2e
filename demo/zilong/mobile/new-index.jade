    script.
      var pages=$('.recom-img');
      var curPageIndex= -1
          ,total=pages.length;
      var nextPage=function(pageIndex){
          pageIndex = pageIndex || curPageIndex+1;
          if(pageIndex==total){
            pageIndex=0;
          }
          var $curPage = pages.eq(curPageIndex)
              ,$page = pages.eq(pageIndex);
          $page.css({left:'100%'}).show();
          $curPage.animate({left:'-100%'},function() {
            $curPage.hide();
          })
          $page.animate({left:'0'});
          curPageIndex = pageIndex;
      }
      var pageAnimate = true;
      setInterval(function(){
        if(pageAnimate)
          nextPage();
      },3000);
      //setTimeout(nextPage,500);
      nextPage();
      pageAnimate=false;
      
      $('#first-row').on('touchstart',function(){
        var touched = true;
        var $self =$(this); 
        pageAnimate=false;
        $self.one('touchend',function(){
          touched = false;
          $self.removeClass('scale');
          pageAnimate=true;
        })
        setTimeout(function(){
          if(touched){
            $self.addClass('scale');
          }
        },300)
      })

      $('.card-box').on('touchstart',function(){
        var touched = true;
